                            android:onClick="oneTrackGreen" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/two_train_green"
                            android:onClick="twoTracksGreen" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/three_train_green"
