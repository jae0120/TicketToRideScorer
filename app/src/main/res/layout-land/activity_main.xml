                        android:layout_marginRight="16dp"
                        android:text="Score: "
                        android:textColor="#0D47A1"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/blue_score_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#0D47A1"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#253E2723"
            android:orientation="vertical">
            <!--
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Player One"/>
                            -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/one_train_yellow"
                        android:onClick="oneTrackYellow" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/two_train_yellow"
                        android:onClick="twoTracksYellow" />

                    <Button
